@page "/ContactUs"

@using BlazorWithSecutiry.Service
@using BlazorWithSecutiry.Models

@inject CommonService commonService
@inject NavigationManager navMan

<div class="container-fluid px-3">
    <div class="row min-vh-100 bg-gray-darker">
        <div class="col-md-6 col-lg-6 col-xl-6 px-lg-6 d-flex align-items-center">
            <div class="w-100 py-5 lighThemeBox">
                <div class="text-center">
                    <img src="/DarkTheme/img/brand/brand-1.svg" alt="..." style="max-width: 6rem;" class="img-fluid mb-4">
                    <h1 class="display-4 text-gray-light mb-3">Contact us</h1>
                </div>
                <form id="contactus" class="form-validate">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="@contactUs.Name"></label>
                        <input asp-for="@contactUs.Name" class="form-control" @bind="contactUs.Name" placeholder="Name" />
                        <span asp-validation-for="@contactUs.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@contactUs.EmailAddress"></label>
                        <input asp-for="@contactUs.EmailAddress" class="form-control" @bind="contactUs.EmailAddress" placeholder="Email Address" />
                        <span asp-validation-for="@contactUs.EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@contactUs.Subject"></label>
                        <input asp-for="@contactUs.Subject" class="form-control" @bind="contactUs.Subject" placeholder="Subject" />
                        <span asp-validation-for="@contactUs.Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@contactUs.Message"></label>
                        <textarea asp-for="@contactUs.Message" class="summernote form-control" @bind="contactUs.Message" placeholder="Message"></textarea>
                        <span asp-validation-for="@contactUs.Message" class="text-danger"></span>
                    </div>

                    <button class="btn btn-lg btn-block btn-primary mb-3" @onclick="SaveContactUs">Submit</button>
                </form>
                <p class="text-center text-muted small mt-5">Design by <a href="https://bootstrapious.com/p/bootstrap-4-dark-admin" class="external">Bootstrapious</a></p>
                <!-- Please do not remove the backlink to us unless you support further theme's development at https://bootstrapious.com/donate. It is part of the license conditions. Thank you for understanding :)                                             -->
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-6 col-xl-6 d-none d-lg-block">
            <div class="row">
                <div class="col-lg-12 d-none d-lg-block">
                    <div class="map" id="mapContent">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3591.5444174810946!2d28.268096115655375!3d-25.818600054679084!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e95677e29a46727%3A0x3bf3a789ea75503!2satWORK%20Internet%20Software%20Solutions!5e0!3m2!1sen!2sza!4v1578828281663!5m2!1sen!2sza" width="1000" height="600" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 d-none d-lg-block">
                    <nav id="Contactus">
                        <ul class="list-unstyled">
                            <li class="active"><a href="#"> <i class="fa fa-map-marker"></i>Castle View South Building Ground Floor Cnr. Lois Avenue &, Tsitsa St, Erasmuskloof, Pretoria, 0181 </a></li>
                            <li class="active"><a href="#"> <i class="icon-contract"></i>079 686 6542 </a></li>
                            <li class="active"><a href="#"> <i class="icon-email"></i>planetthorndesigns@gmail.com </a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    ContactUsDetails contactUs = new ContactUsDetails();

    protected async Task SaveContactUs()
    {
        var model = contactUs;

        await Task.Run(() =>
            {
                commonService.Create(model);
            });

        navMan.NavigateTo("/", false);
    }
}
<style>
    #mapContent {
        width: 100%;
        height: 600px;
        padding-top: 50px;
    }

    iframe {
        width: 100%;
        height: 540px;
        border: 2px solid #ff0c0c96;
    }
</style>