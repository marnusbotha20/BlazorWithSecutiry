@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid px-3">
    <div class="row min-vh-100 bg-gray-dark">
        <div class="col-md-5 col-lg-6 col-xl-4 px-lg-5 d-flex align-items-center">
            <div class="w-100 py-5">
                <div class="text-center">
                    <img src="/DarkTheme/img/brand/brand-1.svg" alt="..." style="max-width: 6rem;" class="img-fluid mb-4">
                    <h1 class="display-4 text-gray-light mb-3">Sign in</h1>
                </div>
                <form id="account" class="form-validate" method="post">
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="name@address.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        @*<input name="loginUsername" type="email" placeholder="name@address.com" autocomplete="off" required="" data-msg="Please enter your email" class="form-control">*@
                    </div>
                    <div class="form-group mb-4">
                        <div class="row">
                            <div class="col">
                                <label asp-for="Input.Password"></label>
                            </div>
                            <div class="col-auto"><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></div>
                        </div>
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <!-- Submit-->
                    <button class="btn btn-lg btn-block btn-primary mb-3">Sign in</button>
                    <!-- Link-->
                    <p class="text-center"><small class="text-muted text-center">Don't have an account yet? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>.</small></p>
                </form>
                <p class="text-center text-muted small mt-5">Design by <a href="https://bootstrapious.com/p/bootstrap-4-dark-admin" class="external">Bootstrapious</a></p>
                <!-- Please do not remove the backlink to us unless you support further theme's development at https://bootstrapious.com/donate. It is part of the license conditions. Thank you for understanding :)                                             -->
            </div>
        </div>
        <div class="col-12 col-md-7 col-lg-6 col-xl-8 d-none d-lg-block">
            <!-- Image-->
            <div style="background-image: url(/DarkTheme/img/photos/victor-ene-1301123-unsplash.jpg);" class="bg-cover h-100 mr-n3"></div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
