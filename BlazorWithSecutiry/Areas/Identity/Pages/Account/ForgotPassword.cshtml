@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="text-center">
    <img src="/DarkTheme/img/brand/brand-1.svg" alt="..." style="max-width: 6rem;" class="img-fluid mb-4">
    <h1 class="display-4 text-gray-light mb-3">Forgot Password</h1>
</div>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" placeholder="Enter your email address." />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-lg btn-block btn-primary mb-3">Submit</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
